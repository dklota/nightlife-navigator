{
  "expo": {
    "name": " WTM",
    "slug": "wtm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "wtm",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wtm.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby bars and enable check-ins.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We use your location to notify you when you're near a bar for quick check-ins.",
        "NSCameraUsageDescription": "Take photos to share your experience at bars.",
        "NSPhotoLibraryUsageDescription": "Select photos to share your experience at bars."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.wtm.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow WTM to use your location for nearby bar detection and check-ins."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow  WTM to access your photos.",
          "cameraPermission": "Allow WTM to take photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#6366f1"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
